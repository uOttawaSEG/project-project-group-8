<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <Button
        android:id="@+id/attendeeId"
        android:layout_width="256dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:onClick="attendee"
        android:text="Attendee"
        app:layout_constraintBottom_toTopOf="@+id/OrganizerId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/OrganizerId"
        android:layout_width="256dp"
        android:layout_height="48dp"
        android:onClick="organizer"
        android:text="Organizer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attendeeId"
        android:layout_marginBottom="250dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
